{
  "compilerOptions": {
    "target": "ES6",
    "noEmit": true,
    "noEmitOnError": true,
    "module": "commonjs",
    "strict": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "**/__mocks__/*",
    "**/__tests__/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}